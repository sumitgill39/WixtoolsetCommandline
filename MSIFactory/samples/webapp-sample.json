    "customTransforms": {
      "DatabaseTimeout": "300",
      "CacheExpiry": "3600"
    }
  },
  "buildSettings": {
    "generateCab": true,
    "signMsi": true,
    "certificatePath": "C:\\Certificates\\CodeSigning.pfx",
    "customWixExtensions": [
      "WixToolset.Util.wixext",
      "WixToolset.UI.wixext"
    ],
    "buildFlags": [
      "-v",
      "-nologo"
    ]
  },
  "deployment": {
    "preInstallScript": "Scripts/PreInstall-CustomerPortal.ps1",
    "postInstallScript": "Scripts/PostInstall-CustomerPortal.ps1",
    "requiresReboot": false,
    "installationTimeout": 600
  },
  "validation": {
    "requiredFiles": [
      "CustomerPortal.dll",
      "appsettings.json",
      "web.config"
    ],
    "excludedFiles": [
      "*.pdb",
      "appsettings.Development.json",
      "test-data/*"
    ],
    "healthCheckUrl": "https://customerportal.company.com/health",
    "healthCheckTimeout": 30
