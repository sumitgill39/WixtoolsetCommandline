  "artifactSources": {
    "primary": "https://jfrog.company.com/artifactory/webapp-releases/CustomerPortal/",
    "fallback": [
      "https://backup-jfrog.company.com/artifactory/webapp-releases/CustomerPortal/",
      "https://dr-jfrog.company.com/artifactory/webapp-releases/CustomerPortal/"
    ],
    "pollingFrequency": "10m",
    "filePattern": "CustomerPortal-v*.zip",
    "authentication": {
      "type": "apikey",
      "credentials": "encrypted_api_key_here"
    }
  },
  "configTransformation": {
    "enabled": true,
    "apiEndpoint": "https://config-api.company.com/v1/transform",
